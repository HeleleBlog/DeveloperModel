<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/head_img_chat_item"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/name_chat_item"
            style="@style/FontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="name" />

        <TextView
            android:id="@+id/content_chat_item"
            style="@style/FontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="content" />

        <com.lib.utils.open_source_lib.ninegridimageview.NineGridImageView
            android:id="@+id/ngl_chat_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            ngl:imgGap="3dp"
            ngl:showStyle="fill"
            ngl:singleImgSize="160dp"/>
    </LinearLayout>
</LinearLayout>